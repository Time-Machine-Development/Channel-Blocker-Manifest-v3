{
    "name": "channel-blocker",
    "version": "1.0.0",
    "description": "A web extension allowing you to block YouTubeâ„¢ videos and comments by blacklisting users and/or by using regular expressions.",
    "main": "index.js",
    "scripts": {
        "dev": "tsc -w",
        "build-manifest": "cp ./src/manifest.json ./dist/manifest.json",
        "build-images": "cp -R ./src/images ./dist/images",
        "build-ui": "rm -r ./dist/ui && cp -R ./src/ui ./dist/ui",
        "build-sass": "node-sass --include-path sass ./dist/ui/settings/style --output ./dist/ui/settings/style",
        "build-service-worker": "node ./package.js",
        "build": "npm run build-ui && npm run build-sass && tsc && npm run build-manifest && npm run build-images && npm run build-service-worker"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Time-Machine-Development/Channel-Blocker.git"
    },
    "keywords": [
        "channel",
        "blocker",
        "youtube",
        "chrome-extension"
    ],
    "author": "Marc Beyer",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Time-Machine-Development/Channel-Blocker/issues"
    },
    "homepage": "https://github.com/Time-Machine-Development/Channel-Blocker#readme",
    "devDependencies": {
        "@types/chrome": "^0.0.254",
        "chrome-types": "^0.1.246",
        "node-sass": "^9.0.0",
        "typescript": "^5.3.3"
    }
}
